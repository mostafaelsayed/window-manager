{
    "name": "Window Manager",
    "description": "Manager your windows",
    "permissions": [
        "tabs",
        "storage",
        "sidePanel",
        "contextMenus"
    ],
    "manifest_version": 3,
    "version": "1.0",
    "side_panel": {
        "default_path": "main-side-panel/main-side-panel.html"
    },
    "action": {
        "default_title": "Click to open panel",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "window-manager.js"
    }
}